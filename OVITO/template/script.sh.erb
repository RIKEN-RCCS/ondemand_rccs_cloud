# Set xfce environment and _VIRTUALGL
<%= set_xfce(is_vgl(context.global_queue_x86, context.global_gpus)) %>

# Start OVITO
<% if !context.global_input_file.to_s.empty? %>
${_VIRTUALGL} /opt/ovito/bin/ovito "<%= context.global_input_file %>" &
<% else %>
${_VIRTUALGL} /opt/ovito/bin/ovito &
<% end %>

# Start up xfce desktop (block until user logs out of desktop)
xfce4-session
